<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_module"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_module"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/module"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/text_module_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muros"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="24sp"
            android:padding="5dp"
            android:layout_below="@id/image_module" />

        <ImageView
            android:id="@+id/image_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:padding="5dp"
            android:layout_below="@id/image_module"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/text_module_title"
            android:layout_alignBottom="@id/text_module_title"
            android:tint="@color/colorAccent"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>